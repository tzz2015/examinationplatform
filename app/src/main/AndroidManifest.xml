<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.weiman.exam.examinationplatform">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".home.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 用户信息 -->
        <activity
            android:name=".mine.activity.UserInfoActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|navigation"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden|stateAlwaysHidden" />
        <!-- 登录 -->
        <activity android:name=".account.activity.LoginActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|navigation"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden|stateAlwaysHidden"/>
        <!-- 注册 -->
        <activity android:name=".account.activity.RegisterActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|navigation"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden|stateAlwaysHidden"/>
        <!-- 设置 -->
        <activity android:name=".mine.activity.SettingActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|navigation"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden|stateAlwaysHidden"/>
        <!-- 拍照 -->
        <activity android:name=".view.photo.CameraActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|navigation"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden|stateAlwaysHidden"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>