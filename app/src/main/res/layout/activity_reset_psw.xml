<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.weiman.exam.examinationplatform.account.activity.LoginActivity">

        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="27px"
            android:paddingRight="27px">

            <TextView
                style="@style/TextView303"
                android:text="验证码" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_marginLeft="27px"
                android:background="@null"
                android:hint="请输入收到的验证码"
                android:textColor="@color/color333333"
                android:textColorHint="@color/color999999"
                android:textSize="30px" />
        </LinearLayout>

        <include layout="@layout/layout_line_inner" />

        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="27px"
            android:paddingRight="27px">

            <TextView
                style="@style/TextView303"
                android:text="新密码" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/et_psw"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_marginLeft="27px"
                android:background="@null"
                android:hint="请输入新密码(6-20个字符)"
                android:textColor="@color/color333333"
                android:textColorHint="@color/color999999"
                android:textSize="30px" />
        </LinearLayout>
        <Button
            android:id="@+id/bt_reset"
            android:textColor="@color/colorWhite"
            android:textSize="30px"
            android:text="重置密码"
            android:layout_marginRight="27px"
            android:layout_marginLeft="27px"
            android:layout_marginTop="50px"
            android:background="@drawable/btn_blue_press"
            android:layout_width="match_parent"
            android:layout_height="80px" />


    </LinearLayout>
</layout>

