<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="27px"
            android:paddingRight="27px">

            <TextView
                style="@style/TextView303"
                android:text="账   号" />

            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_marginLeft="27px"
                android:background="@null"
                android:hint="请输入手机号码或者邮箱"
                android:textColor="@color/color333333"
                android:textColorHint="@color/color999999"
                android:textSize="30px" />
        </LinearLayout>

        <include layout="@layout/layout_line_inner" />

        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="27px"
            android:paddingRight="27px">

            <TextView
                style="@style/TextView303"
                android:text="图形码" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60px"
                android:layout_marginLeft="27px"
                android:background="@null"
                android:hint="请输入密码图形码"
                android:textColor="@color/color333333"
                android:textColorHint="@color/color999999"
                android:textSize="30px" />
            <ImageView
                android:id="@+id/iv_code"
                android:src="@mipmap/img_code"
                android:layout_width="100px"
                android:layout_height="match_parent" />
        </LinearLayout>
        <Button
            android:id="@+id/bt_next"
            android:textColor="@color/colorWhite"
            android:textSize="30px"
            android:text="下一步"
            android:layout_marginRight="27px"
            android:layout_marginLeft="27px"
            android:layout_marginTop="50px"
            android:background="@drawable/btn_blue_press"
            android:layout_width="match_parent"
            android:layout_height="80px" />
    </LinearLayout>
</layout>

